    return $info;
}

function getShortTitle($title,$length=4)
{
    if(utf8_strlen($title) > $length)
        $title=substr($title,0,($length-1)*3)."...";
    return $title;
}

function utf8_strlen($string = null) {
    preg_match_all("/./us", $string, $match);
    return count($match[0]);
}
