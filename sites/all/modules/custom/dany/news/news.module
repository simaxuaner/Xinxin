        $info['news1212'] = ( isset($node->body[LANGUAGE_NONE]) && isset($node->body[LANGUAGE_NONE][0]) )  ? $node->body[LANGUAGE_NONE][0]['value'] : '';
    }
    $nid = variable_get('newsXinxinInfo', 82);
